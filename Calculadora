         txtResultado.setText("");
         sinal = "vesez";
    }                                         

    private void jButton10ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        valor1 = Double.parseDouble(txtResultado.getText());
         txtResultado.setText("");
         sinal = "dividir";
    }                                         

